---
import TheEducation from 'src/components/cv/TheEducation.astro';
import TheHeader from '../components/TheHeader.astro';
import Layout from '../layouts/Layout.astro';
import ThePublications from 'src/components/cv/ThePublications.astro';
import TheSkills from 'src/components/cv/TheSkills.astro';
import TheProfessionalDevelopment from 'src/components/cv/TheProfessionalDevelopment.astro';
import TheOtherInformation from 'src/components/cv/TheOtherInformation.astro';
import TheProfessionalExperience from 'src/components/cv/TheProfessionalExperience.astro';
import ThePersonalStatement from 'src/components/cv/ThePersonalStatement.astro';
import TheProfessionalReferences from '@/components/cv/TheReferences.astro';


---

<Layout>
	<TheHeader name='Tej Birring' />
	<main class="px-4 print:p-0 mt-2 mb-8 max-w-screen-lg flex flex-col gap-4">
		<div class="grid lg:grid-cols-3 print:grid-cols-3 gap-2">
			<div class="col-span-2 flex flex-col gap-4">
				<ThePersonalStatement />
				<TheProfessionalExperience />
			</div>
			<div class="flex flex-col gap-6">
				<TheEducation />
				<TheSkills />
				<TheProfessionalDevelopment />
				<TheProfessionalReferences />
				<TheOtherInformation />
			</div>
		</div>
		<div class="mr-12">
			<ThePublications />
		</div>
	</main>
</Layout>

