---
import config from "@data/configuration"
import TheHeaderDetail from "./TheHeaderDetail.astro"
---
<footer class="border-t-2 border-tertiary-1 max-w-screen-lg pt-6 px-6 pb-3">
    <!-- -->
    <p class="text-primary font-serif leading-snug mb-4">
        <span class="font-bold">Have questions?</span>
        <br/>
        <span class="font-medium italic">
            Feel free to get in touch.
        </span>
    </p>
    <!-- -->
    <div class="text-secondary flex flex-col gap-2">
        <TheHeaderDetail text={config.email} icon="email" url=`mailto:${config.email}`/>
        <TheHeaderDetail text={config.phone} icon="telephone" />
        <TheHeaderDetail text="LinkedIn" icon="linkedin-1" url={config.url} />
    </div>
</footer>