---
import config from "@data/configuration"
import dayjs from "dayjs"
import { Icon } from 'astro-icon/components'
import SectionHeading from "./SectionHeading.astro"
---

{ config.education && <section>
    <SectionHeading title="Education" />
    {
        config.education.map((edu)=>
            <div>
                <div>
                    <h3 class="font-semibold leading-none font-serif">{edu.course}</h3>  
                    <div class="font-medium flex flex-row items-center text-sm leading-none mt-1 mb-0.5">
                        <Icon name="mortarboard" class="mr-1"/>
                        {edu.grade}
                    </div>
                </div>

                <div class="ml-3">
                    <h3 class="leading-none text-secondary mb-1"><em>@ </em> <span class="font-semibold font-serif">{edu.institution}</span></h3>
                    <div class="flex flex-wrap text-secondary/80 gap-1 mb-2">
                        <div class="flex flex-row items-center text-[0.75rem] leading-none mr-4">
                            <Icon name="pin" class="mr-1"/>
                            {edu.location}
                        </div>
                        <div class="flex flex-row items-center text-[0.75rem] leading-none">
                            <Icon name="calendar" class="mr-1"/>
                            {dayjs(edu.startDate).format('MMM YYYY')} - {dayjs(edu.graduationDate).format('MMM YYYY')}
                        </div>
                    </div>
                </div>

                <div class="space-y-1">
                    { edu.details && edu.details.map((eduDetail)=>(
                        <p class="text-[0.7rem] leading-tight">{eduDetail}</p>
                    ))}
                </div>

            </div>
        )
    }
  </section>
}

